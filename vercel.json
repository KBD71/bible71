{
  "version": 2,
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "functions": {
    "api/chat.js": {
      "maxDuration": 30
    }
  },
  "env": {
    "CLAUDE_API_KEY": "@claude_api_key",
    "CLAUDE_MODEL": "claude-sonnet-4-20250514",
    "MAX_TOKENS": "300",
    "TEMPERATURE": "0.3"
  }
}