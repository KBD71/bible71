    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const audioToggleButton = document.getElementById('audio-toggle');
            const audioIcon = document.getElementById('audio-icon');
            const audioText = document.getElementById('audio-text');
            const playIconPath = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>';
            const pauseIconPath = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 9v6m4-6v6m7-3a9 9 0 11-18 0 9 9 0 0118 0z" />';

            let player;
            let videoId = null;

            // YouTube IFrame Player API 비동기 로드
            const tag = document.createElement('script');
            tag.src = "https://www.youtube.com/iframe_api";
            const firstScriptTag = document.getElementsByTagName('script')[0];
            firstScriptTag.parentNode.insertBefore(tag, firstScriptTag);

            window.onYouTubeIframeAPIReady = function() {
                // API가 준비되면 이 함수가 호출됨. 플레이어는 실제 재생 시점에 생성.
            };

            function parseYouTubeId(url) {
                const regex = /(?:https?:\/\/)?(?:www\.)?(?:youtube\.com\/(?:[^\/\n\s]+\/\S+\/|(?:v|e(?:mbed)?)\/|\S*?[?&]v=)|youtu\.be\/)([a-zA-Z0-9_-]{11})/;
                const match = url.match(regex);
                return match ? match[1] : null;
            }

            function updateButtonUI(state) {
                if (state === 'playing') {
                    audioText.textContent = '일시정지';
                    audioIcon.innerHTML = pauseIconPath;
                } else { // paused, ended, unstarted
                    audioText.textContent = 'AI 요약';
                    audioIcon.innerHTML = playIconPath;
                }
            }
            
            function onPlayerStateChange(event) {
                if (event.data === YT.PlayerState.PLAYING) {
                    updateButtonUI('playing');
                } else if (event.data === YT.PlayerState.PAUSED || event.data === YT.PlayerState.ENDED) {
                    updateButtonUI('paused');
                }
            }

            function createPlayer(id) {
                player = new YT.Player('player', {
                    height: '0',
                    width: '0',
                    videoId: id,
                    playerVars: {
                        'playsinline': 1
                    },
                    events: {
                        'onReady': (event) => event.target.playVideo(),
                        'onStateChange': onPlayerStateChange
                    }
                });
            }

            async function fetchAndPlayAudio() {
                try {
                    const response = await fetch('../address/1009.txt');
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    const url = (await response.text()).trim();
                    if (!url) {
                        alert('유효한 오디오 주소가 파일에 없습니다.');
                        return;
                    }
                    
                    videoId = parseYouTubeId(url);
                    if (!videoId) {
                        alert('유효한 YouTube URL이 아닙니다.');
                        return;
                    }

                    if (!player) {
                        createPlayer(videoId);
                    } else {
                        player.loadVideoById(videoId);
                    }
                } catch (error) {
                    alert('아직 업로드 전입니다.');
                    console.error('Error fetching audio address:', error);
                }
            }

            audioToggleButton.addEventListener('click', () => {
                if (!player) {
                    fetchAndPlayAudio();
                } else {
                    const playerState = player.getPlayerState();
                    if (playerState === YT.PlayerState.PLAYING) {
                        player.pauseVideo();
                    } else {
                        player.playVideo();
                    }
                }
            });
        });
    </script>
</body>
